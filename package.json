{
    "name": "react-trello-clone",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@ant-design/icons": "^4.7.0",
        "antd": "^3.11.0",
        "node-sass": "^6.0.1",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dnd": "^5.0.0",
        "react-dnd-html5-backend": "^5.0.1",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.1",
        "react-scripts": "^4.0.3",
        "styled-components": "^5.3.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "eslint": "eslint \"src/**/*.+(js|jsx)\"",
        "eslint-fix": "eslint --fix \"src/**/*.+(js|jsx)\"",
        "prettier": "prettier \"**/*.+(js|jsx|json|scss|css|md|html)\"",
        "prettier-diff": "npm run prettier \"**/*.+(js|jsx|json|scss|css|md|html)\" -- --list-different",
        "prettier-fix": "npm run prettier \"**/*.+(js|jsx|json|scss|css|md|html)\" -- --write",
        "firebase-deploy": "npm run build && firebase deploy"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "firebase": "^9.0.1",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "prettier": "2.3.2",
        "webpack-bundle-analyzer": "^4.4.2"
    },
    "lint-staged": {
        "*.{html,json,md,js,jsx}": "prettier --write"
    }
}
